<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <Button
        android:id="@+id/btn_pen"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="펜"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_remove"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:text="지우개"
        app:layout_constraintStart_toEndOf="@+id/btn_pen"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_all_clear"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="all"
        app:layout_constraintStart_toEndOf="@+id/btn_remove"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_draw_back"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="4dp"
        android:text="<"
        app:layout_constraintStart_toEndOf="@+id/btn_all_clear"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_draw_front"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text=">"
        app:layout_constraintStart_toEndOf="@+id/btn_draw_back"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_item"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="item"
        app:layout_constraintStart_toEndOf="@+id/btn_all_clear"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>